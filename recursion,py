# Create a loop that performs recursion operations
# import sys #(To exit the program)
# def loop_recursion(value):
#     while value <= 10:
#         print(value)
#         value += 1
# loop_recursion(1)
# sys.exit("The end of loop")

def parent_function(value):
    game_count= 0
    
    def count_game():
            nonlocal game_count
            game_count += 1
            if value == value:
                print("Number count:" + str(value))
                print("Game count:" + str(game_count))
    return count_game
result= parent_function(1)
result()
result()
result()

        

